%html
  %head
    = head_title("EuRuKo 2010")
    = meta_description("Register to EuRuKo 2010")
  %body
    #flash= flash[:notice]
    - if current_user
      #header
        You are logged in as
        = "%s." % h(current_user.full_name)
        = button_to("Log out", user_session_path, :method => :delete)
    #content
      %h1= page_title
      = yield