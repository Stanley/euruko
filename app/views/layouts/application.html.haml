!!! 5
%html
  %head
    = head_title("EuRuKo 2010")
    = meta_description("Register to EuRuKo 2010")
    = stylesheet_link_tag 'reset', 'application', 'print'
    <!--[if IE]> 
    = stylesheet_link_tag 'ie', :media => "screen, projection"
    <![endif]-->
  %body.page_class
    #header
      #nav
        = render :partial => 'layouts/menu' 
    #page
      #content
        - if flash[:notice]
          .flash.notice= flash[:notice]
        - elsif flash[:error]
          .flash.error= flash[:error]
        %h1= page_title
        = yield
